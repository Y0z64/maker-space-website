---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import Equipement from "@components/sections/features/Equipement";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/blob.webp";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import banner from "@images/banner.webp";

import printer from "@images/3dprint.webp";
import laser from "@images/lasercut.webp";
import cnc from "@images/cnc.webp";
import vinil_cutter from "@images/vinil_cutter.webp";
import arduino from "@images/arduino.webp";
import tools from "@images/tools.webp";
import code from "@images/code.webp";

import yairAvatar from "@/images/blog/yair.webp";
import andresAvatar from "@/images/blog/andres.webp";

const avatarSrcs: Array<string | ImageMetadata> = [yairAvatar, andresAvatar];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Agenda una cita"
    url="https://calendly.com/makergdl/asistencia-o-asesoria-en-maker-space"
  />

  <HeroSection
    title=`Empieza a crear en <span
        class="text-white rounded-lg pl-1 pr-2 bg-primary">Maker Space</span>`
    subTitle="Herramientas, equipo y asesoría experta para todos tus proyectos de innovación y tecnología."
    primaryBtn="Explora mas"
    primaryBtnURL="/blog"
    secondaryBtn="Contáctanos"
    secondaryBtnURL="/contact"
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`De más de <span class="font-bold">500</span> opiniones`
    src={heroImage}
    alt="Elemento visual abstracto del Maker Space universitario"
  />

  <!-- No modificar -->
  <!-- <ClientsSection
    title="Trusted by Industry Leaders"
    subTitle="Experience the reliability chosen by industry giants."
  /> -->

  <!-- En esta seccion pon no solo el equipamiento del espacio y las maneras en las que te ponemos ayudar en el -->
  <!-- Impresoras 3d, Cortadora Laser, CNC, Cortadora de Vinil, Arduino, Varias herramientas (soldadura, madera, electronica), Programacion -->
  <Equipement
    client:load
    tabs={[
      {
        heading: "Impresoras 3D",
        content:
          "Da vida a tus diseños con nuestras impresoras 3D de última generación. Te proporcionamos el filamento y asesoría para tus proyectos.",
        svg: "tools",
        src: printer.src,
        alt: "Impresora 3D en funcionamiento",
        first: true,
      },
      {
        heading: "Cortadora Láser",
        content:
          "Realiza cortes precisos en diversos materiales con nuestra cortadora láser. Ofrecemos guía para optimizar tus diseños.",
        svg: "tools",
        src: laser.src,
        alt: "Cortadora láser en acción",
      },
      {
        heading: "CNC",
        content:
          "Crea piezas complejas con nuestra máquina CNC. Ideal para proyectos que requieren alta precisión en madera o metal.",
        svg: "tools",
        src: cnc.src,
        alt: "Máquina CNC trabajando en un proyecto",
      },
      {
        heading: "Cortadora de Vinilo",
        content:
          "Diseña y corta vinilos para tus proyectos gráficos o de personalización. Perfecta para stickers y rotulación.",
        svg: "tools",
        src: vinil_cutter.src,
        alt: "Cortadora de vinilo en uso",
      },
      {
        heading: "Arduino",
        content:
          "Explora la electrónica y programación con nuestros kits de Arduino. Aprende a crear proyectos interactivos desde cero.",
        svg: "tools",
        src: arduino.src,
        alt: "Estudiantes trabajando con placas Arduino",
      },
      {
        heading: "Herramientas Diversas",
        content:
          "Accede a herramientas para soldadura, carpintería y electrónica. Todo lo necesario para materializar tus ideas.",
        svg: "tools",
        src: tools.src,
        alt: "Variedad de herramientas disponibles en el Maker Space",
      },
      {
        heading: "Programación",
        content:
          "Desarrolla tus habilidades de coding con nuestros recursos y asesoría en diversos lenguajes de programación.",
        svg: "tools",
        src: code.src,
        alt: "Estación de trabajo para programación",
      },
    ]}
  >
    Descubre todo lo que <span class="text-primary dark:text-accent-200"
      >Maker Space</span
    > tiene para ofrecerte en tu viaje creativo.
  </Equipement>

  <!-- Explicar en esta seccion que cualquiera es bienvenido a trabajar en el espacio, incluyendo para proyectos de empredimiento, prototipado, proyectos personales y prototipado -->
  <FeaturesGeneral
    title="Un espacio para todos los creadores"
    subTitle="En Maker Space, damos la bienvenida a todos los que deseen dar vida a sus ideas. Ya sea para proyectos de emprendimiento, prototipado, proyectos personales o académicos, estamos aquí para apoyarte en cada paso del camino."
    alt="Estudiantes trabajando en diversos proyectos en Maker Space"
    features={features}
    src={banner}
  />

