---
import AvatarAboutUs from "../avatars/AvatarAboutUs.astro";
import Icon from "../icons/Icon.astro";

interface Props {
  src: string;
  alt: string;
  name: string;
  title: string;
  socials?: {
    icon: string;
    url: string;
  }[];
}

const { src, alt, name, title, socials } = Astro.props;
---

<div class="flex w-full flex-col items-center justify-center gap-4">
  <AvatarAboutUs src={src} alt={alt} />
  <div class="flex h-fit flex-col items-center justify-center">
    <h3
      class="text-balance text-xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-2xl md:leading-tight"
    >
      {name}
    </h3>
    <h2 class="text-lg font-bold text-neutral-700 dark:text-neutral-400">
      {title}
    </h2>
  </div>
  <!-- Socials -->
  <div class="flex min-h-10">
    {
      socials?.map((social) => (
        <a href={social.url}>
          <Icon className="h-10 w-10 aspect-square" name={social.icon} />
        </a>
      ))
    }
  </div>
</div>
